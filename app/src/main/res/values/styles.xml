<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="QuestionAnswer">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="QuestionImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">@dimen/question_image_margin_top_and_bottom</item>
        <item name="android:layout_marginTop">@dimen/question_image_margin_top_and_bottom</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
